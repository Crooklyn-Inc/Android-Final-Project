<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/slsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:actionViewClass="androidx.appcompat.widget.SearchView" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/slsFavorites"
            android:textAlignment="center"
            android:textSize="22dp" />


    <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/slsDrawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:openDrawer="start">

        <com.google.android.material.navigation.NavigationView
                android:id="@+id/slsNavView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:fitsSystemWindows="true"
                app:headerLayout="@layout/sls_nav_header"
                app:menu="@menu/geo_nav_drawer_menu" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ListView
                    android:id="@+id/slsList"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="20dp"
                    android:stackFromBottom="false"
                    android:transcriptMode="alwaysScroll" />

            <FrameLayout
                    android:id="@+id/slsFragmentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/slsList" />
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>


</LinearLayout>
