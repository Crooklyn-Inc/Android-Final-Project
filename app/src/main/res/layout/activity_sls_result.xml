<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/slsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:actionViewClass="androidx.appcompat.widget.SearchView" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/slsLyrics"
            android:textAlignment="center"
            android:textSize="22dp" />

    <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/slsDrawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/slsToolbar"
            tools:openDrawer="start">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/botomLine"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                <ProgressBar
                        android:id="@+id/slsProgressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="10sp"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/slsGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/slsGroupText" />

                        <TextView
                                android:id="@+id/slsGroupName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="10sp"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/slsSong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/slsSongText" />

                        <TextView
                                android:id="@+id/slsSongName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                    <TextView
                            android:id="@+id/slsLyricsName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="10sp"
                            android:gravity="center"
                            android:scrollbars="vertical" />

                    <TextView
                            android:id="@+id/slsLyricsNameNotFound"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="10sp"
                            android:gravity="center_vertical"
                            android:text="@string/slsLyricsNotFound"
                            android:textAlignment="center"
                            android:textSize="22dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/botomLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/slsAddToFavoriteListBtn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/slsAddToFavoriteListBtn" />

                <Button
                        android:id="@+id/slsSearchGoogleBtn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/slsSearchGoogleBtn" />
            </LinearLayout>
        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
                android:id="@+id/slsNavView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:fitsSystemWindows="true"
                app:headerLayout="@layout/sls_nav_header"
                app:menu="@menu/geo_nav_drawer_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>
