<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".GeoCityDetailsFragment">

    <ImageView
        android:id="@+id/geoImgViewFavouriteSign"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="3dp"
        android:src="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/geoTxtViewCityDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/geoImgViewFavouriteSign"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@id/geoImgViewFavouriteSign"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="@string/geoCityDetailsTitle"
        android:textSize="19sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/geoListViewCityAttributes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/geoBtnGoToGoogleMaps"
        android:layout_below="@id/geoTxtViewCityDetailsTitle"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:divider="@color/colorGeoListDivider"
        android:dividerHeight="3px"
        android:paddingVertical="5dp"
        android:stackFromBottom="false"
        android:textSize="18sp"
        android:transcriptMode="alwaysScroll" />

    <Button
        android:id="@+id/geoBtnGoToGoogleMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:paddingVertical="15dp"
        android:text="@string/geoBtnGoToGoogleMaps"
        android:textSize="18sp" />

    <Button
        android:id="@+id/geoBtnAddRemoveFavourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:paddingVertical="15dp"
        android:text="@string/geoBtnAddToFavourites"
        android:textSize="18sp" />

</RelativeLayout>