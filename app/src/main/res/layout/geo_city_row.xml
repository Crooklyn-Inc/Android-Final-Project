<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView
        android:id="@+id/geoImgViewFavouriteSign"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:src="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/geoTxtViewCityRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/geoImgViewFavouriteSign"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        android:layout_toStartOf="@id/geoTxtViewCityDistRow"
        android:layout_toEndOf="@id/geoImgViewFavouriteSign"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="Some Text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/geoTxtViewCityDistRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/geoTxtViewCityRow"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:textSize="18sp" />

</RelativeLayout>