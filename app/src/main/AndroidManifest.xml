<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.example.finalproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--    main activity   -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--    pavel's activities  -->
        <activity
                android:name=".geo.GeoDataSource"
                android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
                android:name=".geo.GeoCityList"
                android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
                android:name=".geo.GeoCityInfo"
                android:configChanges="keyboardHidden|orientation|screenSize" />

        <!--    yulia's activities-->
        <activity android:name=".deezer.DeezerSongSearch" />
        <activity android:name=".deezer.DeezerCustomProgressBarActivity" />
        <activity
                android:name=".deezer.DeezerEmptyActivity"
                tools:ignore="Instantiatable" />
        <activity android:name=".deezer.Deezer_activity3" />
        <activity android:name=".deezer.Deezer_activity1" />
        <activity android:name=".deezer.Deezer_activity2" />

        <!--    olga's activities-->
        <activity android:name=".sls.SongLyricsSearch" />
        <activity android:name=".sls.SongLyricsSearchFavoriteRecord" />
        <activity android:name=".sls.SongLyricsSearchFavoriteList" />
        <activity android:name=".sls.SongLyricsSearchResult" />
        
        <!--    yegor's activities-->
        <activity android:name=".soccerMatch.SoccerMatchHighlights" />
        <activity android:name=".soccerMatch.EmptyActivitySMH" />
        <activity android:name=".soccerMatch.ListOfFavourites" />
        <activity android:name=".soccerMatch.ViewInfo">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.example.com"
                    android:scheme="http" />
                <data android:scheme="https" />
            </intent-filter>
        </activity>

    </application>
</manifest>
